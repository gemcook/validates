{
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "plugins": ["jest", "flowtype"],
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "jest/globals": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2019,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "no-unused-vars": 0,
    "object-shorthand": [2, "always"],
    "no-console": [
      1,
      {
        "allow": ["warn", "error", "info"]
      }
    ]
  }
}
